<?xml version="1.0"?>
<odoo>
    <record id="view_sale_order_inherit" model="ir.ui.view">
        <field name="name">custom_sale_order_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_confirm" id="action_confirm" position="replace">
                <button name="action_confirm" id="action_confirm"
                        data-hotkey="v" string="Confirm" class="btn-primary" type="object"
                        context="{'validate_analytic': True}" invisible="is_configured == 1 or state in ('waiting','sale','cancel')"/>
            </button>
            <button name="action_confirm" position="replace" invisible="state != 'draft'"/>
            <xpath expr="//field[@name='validity_date']" position="after">
                <field name="is_configured" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_preview_sale_order']" position="before">
                <field name="is_visible_buttons" invisible="1"/>
                <button name="action_submit" type="object" string="Submit" class="btn-primary" invisible="is_configured == 0 or state != 'draft' "/>
                <button name="action_approve" type='object' string="Approve" class="btn-primary" invisible="is_configured == 0 or state in ('approved','sent') or is_visible_buttons == 0 or state in ('draft','approved', 'sent','sale','rejected','cancel') "/>
                <button name="action_reject" type='object' string="Reject" class="btn-primary" invisible="is_configured == 0 or state in ('approved','sent') or is_visible_buttons == 0 or state in ('draft','approved', 'sent','sale','rejected','cancel') "/>
                <button name="action_draft" type='object' string="Draft" class="btn-primary" invisible=" state != 'rejected'"/>
                <xpath name="action_quotation_send" position="replace" invisible="state != 'approved' or is_configured==1">
                    <button name="action_quotation_send" string="Sent by Email" class="btn-primary"
                            type="object" context="{'validate_analytic': True}" />
                </xpath>
                <xpath name="action_cancel" position="replace" invisible="state != 'approved' or is_configured==1 ">
                    <button name="action_cancel" string="Cancel" class="btn-secondary" type="object"/>
                </xpath>
            </xpath>
            <notebook position="inside">
                <page string="User Approvals">
                    <field name="approval_user_line_ids">
                        <tree create="false">
                            <field name="user_id" readonly="True" widget=""/>
                            <field name="status" readonly="True" widget=""/>
                            <field name="rejection_reason" string="Rejection Reason" readonly="True"
                                   widget=""/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>