<?xml version="1.0"?>
<odoo>
    <record id="view_purchase_order_inherit" model="ir.ui.view">
        <field name="name">custom_purchase_order_view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_confirm" id="draft_confirm" position="replace">
                <button name="button_confirm" type="object"
                        context="{'validate_analytic': True}" string="Confirm Order" id="draft_confirm"
                        data-hotkey="q"
                        invisible="is_configured == 1 or state in ('approved','purchase','done','sent')"
                />
            </button>
            <button name="print_quotation" position="replace">
                <button name="print_quotation" string="Print RFQ" type="object"
                        class="oe_highlight" groups="base.group_user" data-hotkey="k"
                        invisible="is_configured == 1 or state in ('done','sent')"
                />
            </button>

            <xpath expr="//field[@name='state']" position="after">
                <field name="is_configured" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='button_cancel']" position="before">
                <field name="is_visible_buttons" invisible="1"/>

                <button name="action_submit" type="object" string="Submit" class="btn-primary"
                        invisible="is_configured==0 or state != 'draft'"/>

                <button name="action_approve" type="object" string="Approve" class="btn-primary"
                        invisible="is_configured == 0 or state in ('approved', 'sent') or is_visible_buttons == 0 or state in ('draft', 'approved', 'sent', 'purchase', 'rejected', 'done', 'cancel')"/>

                <button name="action_reject" type="object" string="Reject" class="btn-primary"
                        invisible="is_configured == 0 or state in ('approved', 'sent') or is_visible_buttons == 0 or state in ('draft', 'approved', 'sent', 'purchase', 'rejected', 'done', 'cancel')"/>

                <xpath name="button_cancel" position="replace" invisible="is_configured==0 or state != 'approved'">
                    <button name="button_cancel" string="Cancel" class="btn-primary" type="object"
                            context="{'validate_analytic': True}"/>
                </xpath>

                <xpath name="print_quotation" position="replace" invisible="is_configured == 0 or state != 'approved'">
                    <button name="print_quotation" string="Print RFQ" class="btn-primary"
                            type="object" context="{'validate_analytic': True}"
                    />
                </xpath>
                <button name="button_draft" string="Set to Draft" type="object" data-hotkey="o" class="btn-primary"
                        invisible="state != 'rejected' or is_configured == 0"/>
                <xpath name="button_confirm" position="replace" invisible="state != 'approved' or is_configured==1">
                    <button name="button_confirm" type="object"
                            context="{'validate_analytic': True}" string="Confirm Order" id="sent_confirm"
                            data-hotkey="q"
                            class="btn btn-primary"/>
                </xpath>
                <xpath name="button_draft" position="replace" invisible="state != 'rejected' or is_configured == 1">
                    <button name="button_draft" string="Set to Draft" type="object" data-hotkey="o"
                            class="btn-primary"/>
                </xpath>
            </xpath>

            <notebook position="inside">
                <page string="User Approvals">
                    <field name="approval_user_line_ids">
                        <tree create="false">
                            <field name="user_id" readonly="True" widget=""/>
                            <field name="status" readonly="True" widget=""/>
                            <field name="rejection_reason" string="Rejection Reason" readonly="True"
                                   widget=""/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
